{
  "name": "hyper-chat",
  "version": "1.0.0",
  "description": "Chat application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "watch": "nodemon --exec electron .",
    "build": "electron-builder -w",
    "release": "electron-builder -w --publish 'onTagOrDraft'",
    "win-cert": "electron-builder create-self-signed-cert -p pranav"
  },
  "repository": "https://github.com/Shadow7258/HyperChat",
  "homepage": "https://github.com/Shadow7258/HyperChat",
  "keywords": [
    "Electron",
    "Master Electron",
    "demo"
  ],
  "author": "Pranav Doshi",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^9.3.4",
    "electron-builder": "^22.9.1",
    "nodemon": "^2.0.6"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "custom-electron-titlebar": "^3.2.5",
    "electron-log": "^4.3.0",
    "electron-updater": "^4.3.5",
    "electron-window-state": "^5.0.3",
    "firebase": "^7.24.0",
    "jquery": "^3.5.1",
    "mongodb": "^3.6.2",
    "mousetrap": "^1.6.5",
    "socket.io": "^2.3.0"
  },
  "build": {
    "appId": "com.pranav.hyper-chat",
    "copyright": "Copyright Pranav",
    "publish": {
      "provider": "github"
    },
    "mac": {
      "category": "public.app-category.social-networking"
    },
    "win": {
      "certificateFile": "private/pranav.pfx",
      "certificatePassword": "",
      "publisherName": "pranav"
    },
    "linux": {
      "category": "Utility"
    }
  }
}
